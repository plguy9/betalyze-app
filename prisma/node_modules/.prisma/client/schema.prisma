generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// --- Cache minimal pour Betalyze ---
model Team {
  id           Int      @id @default(autoincrement())
  sport        String // "NBA" | "NHL" | "MLB"
  externalId   String? // id depuis API (balldontlie, NHL StatsAPI, MLB StatsAPI)
  name         String
  abbreviation String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  players Player[]

  @@unique([sport, externalId])
}

model Player {
  id         Int     @id @default(autoincrement())
  sport      String
  externalId String?
  firstName  String
  lastName   String
  position   String?
  teamId     Int?
  team       Team?   @relation(fields: [teamId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([sport, externalId])
  @@index([sport, lastName, firstName])
}
